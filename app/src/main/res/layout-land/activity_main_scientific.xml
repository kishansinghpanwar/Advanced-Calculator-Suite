<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calculator_background"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Left Panel: Scientific Functions -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mode and History Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnMode"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:text="Basic" />

                <Button
                    android:id="@+id/btnHistory"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:text="Hist" />

            </LinearLayout>

            <!-- Trigonometric Functions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trigonometry"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSin"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="sin" />

                <Button
                    android:id="@+id/btnCos"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="cos" />

                <Button
                    android:id="@+id/btnTan"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="tan" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAsin"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="asin" />

                <Button
                    android:id="@+id/btnAcos"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="acos" />

                <Button
                    android:id="@+id/btnAtan"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="atan" />

            </LinearLayout>

            <!-- Logarithmic Functions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logarithmic"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLog"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="log" />

                <Button
                    android:id="@+id/btnLn"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="ln" />

                <Button
                    android:id="@+id/btnE"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="e" />

            </LinearLayout>

            <!-- Power Functions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Power &amp; Root"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSqrt"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="√" />

                <Button
                    android:id="@+id/btnCbrt"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="∛" />

                <Button
                    android:id="@+id/btnPower"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="x^y" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSquare"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="x²" />

                <Button
                    android:id="@+id/btnCube"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="x³" />

                <Button
                    android:id="@+id/btnInverse"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="1/x" />

            </LinearLayout>

            <!-- Special Functions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFactorial"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="n!" />

                <Button
                    android:id="@+id/btnPi"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="π" />

                <Button
                    android:id="@+id/btnAbs"
                    style="@style/CalculatorButton.Scientific"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="|x|" />

            </LinearLayout>

            <!-- Memory Functions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Memory"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMC"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="MC" />

                <Button
                    android:id="@+id/btnMR"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="MR" />

                <Button
                    android:id="@+id/btnMS"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="MS" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMPlus"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="M+" />

                <Button
                    android:id="@+id/btnMMinus"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="M-" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Right Panel: Display and Basic Calculator -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Display Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/display_background"
            android:gravity="bottom|end"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvExpression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text=""
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="start" />

        </LinearLayout>

        <!-- Basic Calculator Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Row 1: AC, +/-, %, ÷ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnClearAll"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/clear_all" />

                <Button
                    android:id="@+id/btnPlusMinus"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/plus_minus" />

                <Button
                    android:id="@+id/btnPercent"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/percent" />

                <Button
                    android:id="@+id/btnDivide"
                    style="@style/CalculatorButton.Operator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/divide" />

            </LinearLayout>

            <!-- Row 2: 7, 8, 9, × -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/seven" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/eight" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/nine" />

                <Button
                    android:id="@+id/btnMultiply"
                    style="@style/CalculatorButton.Operator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/multiply" />

            </LinearLayout>

            <!-- Row 3: 4, 5, 6, - -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/four" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/five" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/six" />

                <Button
                    android:id="@+id/btnSubtract"
                    style="@style/CalculatorButton.Operator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/subtract" />

            </LinearLayout>

            <!-- Row 4: 1, 2, 3, + -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/one" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/two" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/three" />

                <Button
                    android:id="@+id/btnAdd"
                    style="@style/CalculatorButton.Operator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/add" />

            </LinearLayout>

            <!-- Row 5: 0, ., =, Delete -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn0"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/zero" />

                <Button
                    android:id="@+id/btnDecimal"
                    style="@style/CalculatorButton.Number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/decimal" />

                <Button
                    android:id="@+id/btnEquals"
                    style="@style/CalculatorButton.Operator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/equals" />

                <Button
                    android:id="@+id/btnDelete"
                    style="@style/CalculatorButton.Function"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/delete" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

