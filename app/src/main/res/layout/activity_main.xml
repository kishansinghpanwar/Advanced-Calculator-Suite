<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calculator_background"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:paddingTop="?android:attr/actionBarSize"
    android:paddingBottom="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Normal Calculator"
            android:textSize="@dimen/display_text_size_large"
            android:textColor="@color/text_on_display"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Display Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/display_background"
        android:gravity="bottom|end"
        android:orientation="vertical"
        android:padding="32dp"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="@color/text_on_display"
            android:textSize="@dimen/display_text_size_medium"
            android:visibility="gone"
            android:alpha="0.7" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="@color/text_on_display"
            android:textSize="@dimen/display_text_size_large"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="start"
            android:minHeight="@dimen/display_min_height"
            android:padding="@dimen/display_padding" />

    </LinearLayout>

    <!-- Button Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Row 1: Mode, Settings, AC, +/-, % -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnHistory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_function_background"
                android:text="ðŸ“Š"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btnClearAll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_function_background"
                android:text="C"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btnPlusMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_function_background"
                android:text="Â±"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btnPercent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_function_background"
                android:text="%"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

        </LinearLayout>

        <!-- Row 2: Ã·, 7, 8, 9 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_operator_background"
                android:text="Ã·"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="7"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="8"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="9"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

        </LinearLayout>

        <!-- Row 3: Ã—, 4, 5, 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_operator_background"
                android:text="Ã—"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="4"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="5"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="6"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

        </LinearLayout>

        <!-- Row 4: -, 1, 2, 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnSubtract"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_operator_background"
                android:text="-"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="1"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="2"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="3"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

        </LinearLayout>

        <!-- Row 5: +, 0, ., = -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_operator_background"
                android:text="+"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="0"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btnDecimal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_number_background"
                android:text="."
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FF424242"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

            <TextView
                android:id="@+id/btnEquals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_operator_background"
                android:text="="
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

        </LinearLayout>

        <!-- Row 6: Delete button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/button_function_background"
                android:text="Delete"
                android:textSize="@dimen/button_text_size_medium"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
