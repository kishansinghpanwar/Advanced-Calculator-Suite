<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/calculator_card_background"
    android:padding="16dp"
    android:gravity="center"
    android:minHeight="120dp">

    <ImageView
        android:id="@+id/calculatorIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Calculator Icon" />

    <TextView
        android:id="@+id/calculatorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator Name"
        android:textSize="@dimen/button_text_size_medium"
        android:textColor="@color/text_on_display"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/calculatorDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator Description"
        android:textSize="@dimen/button_text_size_small"
        android:textColor="@color/text_on_display"
        android:alpha="0.7"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>

