<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_function" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/button_operator" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/display_background" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/button_function" />
        </shape>
    </item>
</selector>

